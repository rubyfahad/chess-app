<div class="hero">
  <br />
  <div class="col-xs-12 text-center">
    <br />
    <br />
    <h1>Play Chess Now!</h1>
    <br />
    <br />
      <div class="frosty col-xs-12 text-center col-md-6 col-md-offset-3">
        <h2>Open Games</h2>
        <hr />
          <% @games.each do |game| %>
            <div class="games col-xs-10 col-xs-offset-1 col-md-6 ">
              <br />
              <h4>Game:  <%= game.game_name %></h4>
              <h4>White Player:  <%= game.user.email %></h4>
            </div>
            <div class="join_button col-xs-12 text-center col-md-1 col-md-offset-1">
              <%= link_to 'Join Game!', game_path(game), class: 'btn btn-success btn-sm' %>
            </div>
          <% end %>
      </div>
   </div>
</div>
