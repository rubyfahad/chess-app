<div class="hero">
  <br />
  <br />
    <div class="frosty col-xs-12 text-center col-md-6 col-md-offset-3">
      <h2>Play Chess Now!</h2>
      <hr />
      <% @games.each do |game| %>
        <div class="each-game col-xs-12">
          <div class="col-xs-10 col-xs-offset-1 col-md-6 ">
            <br />
            <h4>Game:  <%= game.game_name %></h4>
            <br />
            <h4>White Player:  <%= game.white_user.email %></h4>
          </div>
          <div class="col-xs-12 text-center col-md-1 col-md-offset-1">
            <br />
            <br />
            <button type="button" class="btn btn-success">
              <%= link_to 'Join Game', join_game_path(game.id), { action: :join, method: :patch }%>
            </button>
          </div>
        </div>
      <% end %>
   </div>
</div>
